<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_PATTERN"
            value="%date{&quot;yyyy-MM-dd'T'HH:mm:ss,SSSXXX&quot;, UTC} [%thread] %-5level %logger{36} - %msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- spring -->
    <logger name="springfox" level="WARN"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.springframework.cache" level="INFO"/>


    <!-- Spring REST server request/response logging (without body) => enabled/disabled by spring profile -->

    <logger name="org.hibernate" level="WARN"/>

    <!-- DB procedure logging with request/response parameters -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql"
            level="TRACE"/> <!-- in TRACE mode you can see all values saved to DB -->

    <!-- JDBC procedure logging with request/response parameters -->
    <logger name="jdbc.sqlonly" level="TRACE"/>
    <logger name="jdbc.sqltiming" level="WARN"/>
    <logger name="jdbc.audit" level="WARN"/>
    <logger name="jdbc.resultset" level="WARN"/>
    <logger name="jdbc.connection" level="WARN"/>


    <!-- liquibase logging -->
    <logger name="liquibase" level="INFO"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
